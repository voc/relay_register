%h2 tags

%ul.head_menu
  %li
    %a{href: url("#{settings.sub_path}/tag/new")} new
%br

%table{ border: true}
  %thead
    %tr
      %th name
      %th actions
  %tbody
    - @tags.each do |tag|
      %tr
        %td
          %a{ href: url("#{settings.sub_path}/tag/#{tag.name}")}
            = tag.name
        %td
          %a{ href: url("#{settings.sub_path}/tag/#{tag.name}/edit"), class: 'action' } edit
          %a{ href: url("#{settings.sub_path}/tag/#{tag.name}/delete"), class: 'action' } delete


%p
  %a{ href: url(settings.sub_path + '/') } ← back
